{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "baseUrl": "src",
    "moduleResolution": "node",
    "strict": true,
    "allowJs": false,
    "forceConsistentCasingInFileNames": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
  }
}